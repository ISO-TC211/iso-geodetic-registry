<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment />

	<!-- Static part of client URLs (e.g. ~/regdev) -->
	<entry key="basePath">${client.basepath}</entry>

	<!-- Switch to enable/disable confirmation mail feature -->
	<entry key="signup.sendConfirmationMails">${client.signup.sendConfirmationMails}</entry>
	 
	<!-- URL that must be used by external clients to perform confirmation (this is included in confirmation mails)  -->	
	<entry key="signup.confirmationUrl">${client.signup.confirmationUrl}</entry> 
</properties>
